<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :Nombre, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <br>
  <div>
    <%= form.label :Fecha_nacimiento, style: "display: block" %>
    <%= form.date_field :birthdate %>
  </div>
  <br>
  <div>
    <%= form.label :Genero, style: "display: block" %>
    <%= form.select :gender, User.genders.keys %>
  </div>
  <br>
  <div>
    <%= form.label :Pais_origen, style: "display: block" %>
    <%= form.text_field :country %>
  </div>
  <br>
  <div>
    <%= form.submit "Guadar Datos" %>
  </div>
<% end %>
